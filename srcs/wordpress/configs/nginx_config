#Main server configuration
server {
	listen		5050;
	listen		[::]:5050;
	root		/var/www/html/wordpress;
	index		index.php index.html index.htm;

	location / {
		autoindex on;
		try_files $uri $uri/ /index.php?$args;
	}
	
	location ~ \.php$ {
		include	fastcgi_params;
		include	fastcgi.conf;
		fastcgi_pass 127.0.0.1:9000;
	}
	location ~ /\.ht {
        deny all;
    }
}
